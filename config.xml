<?xml version="1.0" encoding="UTF-8"?>

<!-- config.xml reference: https://build.phonegap.com/docs/config-xml -->

<!--Change Widget -->
<widget xmlns     = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "mob.app.dev.lifecycle"
        version   = "1.0.0">

    <name>Climb n Hike</name>

    <description>
        A PhoneGap application giving Climbers and Hikers a host of virtual aids and tools.
    </description>
    <platform name="ios">
        <icon src="icon.png" />
    </platform>
    
    
    
    <!-- iPhone 6 / 6+ -->
    <icon src="icon.png" platform="ios" width="180" height="180" />

    <!-- iPhone / iPod Touch  -->
    <icon src="icon.png" platform="ios" width="60" height="60" />
    <icon src="icon.png" platform="ios" width="120" height="120" />

    <!-- iPad -->
    <icon src="icon.png" platform="ios" width="76" height="76" />
    <icon src="icon.png" platform="ios" width="152" height="152" />
    <icon src="icon.png" platform="ios" width="167" height="167" />

    <!-- Settings Icon -->
    <icon src="icon.png" platform="ios" width="29" height="29" />
    <icon src="icon.png" platform="ios" width="58" height="58" />
    <icon src="icon.png" platform="ios" width="87" height="87" />

    <!-- Spotlight Icon -->
    <icon src="icon.png" platform="ios" width="40" height="40" />
    <icon src="icon.png" platform="ios" width="80" height="80" />
    <icon src="icon.png" platform="ios" width="120" height="120" />
    
    <!-- Splash loading screens-->
    <splash src="splash.png" />
    
    
    
    

    <author href="worcester.ac.uk" email="lloh1_18@uni.worc.ac.uk">
        18009037 - Student
    </author>

    <preference name="phonegap-version" value="cli-7.0.1" />
	
    <preference name="permissions"                value="none"/>   
	
	<access origin="*"/>
   	<plugin name="cordova-plugin-whitelist" version="1" />
</widget>
